---
import WhatsAppIcon from "../Icons/WhatsappIcon";
import InstagramIcon from "../Icons/InstagramIcon";
import FacebookIcon from "../Icons/FacebookIcon";

const facebookLink = import.meta.env.FACEBOOK_LINK_ADDRESS;
const instagramLink = import.meta.env.INSTAGRAM_LINK_ADDRESS;
const whatsappNumber = import.meta.env.WHATSAPP_NUMBER;

const title = "Contactame";
const description =
  "Si te quedaste con alguna duda, escribime o contactame para coordinar un encuentro virtual sin costo para conversar acerca de lo que estés necesitando.";

const faqItems = [
  {
    question: "¿Dónde se realizan los encuentros?",
    answer:
      "Los encuentros se realizan en modalidad virtual o presencial en la zona de CABA.",
  },
  {
    question: "¿Cuál es la duración de los encuentros?",
    answer:
      "La duración depende del tipo de encuentro, pero generalmente oscilan entre 1 y 1.5 horas.",
  },
  {
    question: "¿Puedo coordinar un horario flexible?",
    answer:
      "¡Por supuesto! Trabajamos para adaptarnos a tus necesidades y horarios.",
  },
];
---

<section class="py-24">
  <div class="container mx-auto px-6">
    <!-- Título y descripción -->
    <h1 class="text-3xl md:text-5xl font-serif text-gray-700 text-center mb-4">
      {title}
    </h1>
    <p class="text-lg md:text-xl font-sans text-gray-700 text-center mb-12">
      {description}
    </p>

    <!-- Formulario e imagen del mapa -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-12">
      <!-- Formulario -->
      <form
        action="https://formspree.io/f/your-form-id"
        method="POST"
        class="bg-orange-100 rounded-lg shadow-lg p-6 space-y-6"
      >
        <!-- Campo Nombre -->
        <div>
          <label
            for="name"
            class="block text-xs md:text-sm font-sans font-medium text-gray-700 mb-2"
          >
            Nombre completo
          </label>
          <input
            type="text"
            id="name"
            name="name"
            autocomplete="name"
            required
            class="w-full border border-gray-300 rounded-md px-4 py-2 focus:outline-none focus:ring-2 focus:ring-orange-3 focus:ring-opacity-65 text-xs md:text-sm"
            placeholder="Ingresa tu nombre completo"
          />
        </div>

        <!-- Campo Email -->
        <div>
          <label
            for="email"
            class="block text-xs md:text-sm font-sans font-medium text-gray-700 mb-2"
          >
            Correo electrónico
          </label>
          <input
            type="email"
            id="email"
            name="email"
            autocomplete="email"
            required
            class="w-full border border-gray-300 rounded-md px-4 py-2 focus:outline-none focus:ring-2 focus:ring-orange-3 focus:ring-opacity-65 text-xs md:text-sm"
            placeholder="Ingresa tu correo electrónico"
          />
        </div>

        <!-- Campo Mensaje -->
        <div>
          <label
            for="message"
            class="block text-xs md:text-sm font-medium font-sans text-gray-700 mb-2"
          >
            Mensaje
          </label>
          <textarea
            id="message"
            name="message"
            rows="5"
            autocomplete="off"
            required
            class="w-full border border-gray-300 rounded-md px-4 py-2 focus:outline-none focus:ring-2 focus:ring-orange-3 focus:ring-opacity-65 text-xs md:text-sm"
            placeholder="Escribe tu mensaje aquí"></textarea>
        </div>

        <!-- Botón Enviar -->
        <div class="text-center">
          <button
            type="submit"
            class="px-6 py-3 bg-orange-3 text-white-1 rounded-lg text-xs md:text-base font-sans font-medium hover:brightness-125"
          >
            Enviar mensaje
          </button>
        </div>

        <!-- Mensaje de confirmación -->
        <p
          id="confirmationMessage"
          class="text-green-600 text-center mt-4 hidden"
          aria-live="polite"
        >
          ¡Tu mensaje ha sido enviado con éxito! Nos pondremos en contacto
          contigo pronto.
        </p>
      </form>

      <!-- Imagen del mapa -->
      <div class="flex flex-col items-center p-6">
        <img
          src="/images/Contacto/contact_map.svg"
          alt="Mapa indicando la zona de encuentros"
          class="rounded-lg object-cover w-full h-full"
        />
        <p class="text-xs md:text-sm font-sans text-gray-700 mt-4 text-center">
          Zona de encuentros presenciales: Recoleta, CABA. Contáctanos para
          coordinar una ubicación exacta.
        </p>
      </div>
    </div>

    <!-- FAQ -->
    <div class="bg-white rounded-lg shadow-lg p-6">
      <h2 class="text-xl md:text-2xl font-serif text-gray-700 mb-6">
        Preguntas Frecuentes
      </h2>
      <div class="space-y-4">
        {
          faqItems.map((faq) => (
            <div class="p-4 bg-orange-50 rounded-md border border-gray-300">
              <h3 class="text-base md:text-lg font-sans text-gray-700 mb-2">
                {faq.question}
              </h3>
              <p class="text-xs md:text-sm font-sans text-gray-700">
                {faq.answer}
              </p>
            </div>
          ))
        }
      </div>
    </div>

    <!-- Redes sociales -->
    <div class="flex justify-center space-x-6 mt-12">
      <!-- Para WhatsApp, asegúrate que whatsappNumber contenga el enlace completo o usa: https://wa.me/${whatsappNumber} -->
      <a
        href={whatsappNumber}
        target="_blank"
        rel="noopener noreferrer"
        aria-label="WhatsApp"
        class="text-gray-700 hover:text-orange-3 transition"
      >
        <WhatsAppIcon className="h-6 w-6 fill-current" />
      </a>
      <a
        href={instagramLink}
        target="_blank"
        rel="noopener noreferrer"
        aria-label="Instagram"
        class="text-gray-700 hover:text-orange-3 transition"
      >
        <InstagramIcon className="h-6 w-6 fill-current" />
      </a>
      <a
        href={facebookLink}
        target="_blank"
        rel="noopener noreferrer"
        aria-label="Facebook"
        class="text-gray-700 hover:text-orange-3 transition"
      >
        <FacebookIcon className="h-6 w-6 fill-current" />
      </a>
    </div>
  </div>
</section>
