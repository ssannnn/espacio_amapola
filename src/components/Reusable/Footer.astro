---
import GitHubIcon from "../Icons/GitHubIcon";
import FacebookIcon from "../Icons/FacebookIcon";
import InstagramIcon from "../Icons/InstagramIcon";
---

<footer class="relative bg-orange-2 py-12">
  <!-- Contenedor principal -->
  <div
    class="container mx-auto grid grid-cols-1 md:grid-cols-3 gap-8 items-center px-4"
  >
    <!-- Logo y nombre -->
    <div
      class="flex items-center justify-center md:justify-start p-4 bg-white-1 bg-opacity-10 rounded-lg space-x-4"
    >
      <img
        src="/images/logo_s.png"
        alt="Logo Espacio Amapola"
        class="h-8 mr-4"
      />
      <span class="text-xl font-serif text-white-1">Espacio amapola</span>
    </div>

    <!-- Enlaces de navegación -->
    <nav class="font-sans text-center text-white-1 font-normal md:text-left">
      <ul class="space-y-2">
        <li>
          <a
            href="/sobre-mi"
            class="hover:font-medium hover:scale-105 transition-transform duration-300 focus:outline-none"
            aria-label="Ir a Sobre mí"
          >
            Sobre mí
          </a>
        </li>
        <li>
          <a
            href="/encuentros"
            class="hover:font-medium hover:scale-105 transition-transform duration-300 focus:outline-none"
            aria-label="Ir a Encuentros"
          >
            Encuentros
          </a>
        </li>
        <li>
          <a
            href="/contacto"
            class="hover:font-medium hover:scale-105 transition-transform duration-300 focus:outline-none"
            aria-label="Ir a Contacto"
          >
            Contacto
          </a>
        </li>
      </ul>
    </nav>

    <!-- Redes Sociales -->
    <div class="flex flex-col items-center md:items-end space-y-2">
      <div
        class="bg-white-1 bg-opacity-10 rounded-lg px-4 py-2 text-sm font-medium text-white-1"
      >
        Encontrame en:
      </div>
      <div class="flex space-x-2">
        <a
          href="#"
          class="group hover:opacity-80 focus:opacity-80"
          aria-label="Ir a Instagram"
        >
          <InstagramIcon
            className="fill-white-1 h-5 w-5 opacity-60 group-hover:opacity-100 group-hover:brightness-200 transition duration-300"
          />
        </a>

        <a
          href="#"
          class="group hover:opacity-80 focus:opacity-80"
          aria-label="Ir a Facebook"
        >
          <FacebookIcon
            className="fill-white-1 h-5 w-5 opacity-60 group-hover:opacity-100 group-hover:brightness-200 transition duration-300"
          />
        </a>
      </div>
    </div>
  </div>

  <!-- Créditos -->
  <div
    class="text-center font-sans mt-12 text-sm text-white-1 flex items-center justify-center space-x-2 pb-6"
  >
    <span>Site by</span>
    <a
      href="https://github.com/tu-usuario"
      class="group hover:opacity-80 focus:opacity-80"
      aria-label="Ir al perfil de GitHub"
    >
      <GitHubIcon
        className="h-5 w-5 opacity-50 group-hover:opacity-100 group-hover:brightness-200 transition duration-300"
      />
    </a>
  </div>
</footer>
