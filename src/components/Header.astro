---
const currentUrl = new URL(Astro.request.url).pathname;

const navItems = [
  { title: "Inicio", href: "/" },
  { title: "Sobre Mí", href: "/sobre-mi" },
  { title: "Encuentros", href: "/encuentros" },
  { title: "Contacto", href: "/contacto" },
];

const whatsappNumber = "1132873292";
---

<header class="fixed top-0 w-full bg-fondo-claro shadow z-50 bg-white-1">
  <div class="container mx-auto flex items-center justify-between p-4">
    <!-- Logo y Marca -->
    <div class="flex items-center">
      <a href="/" class="flex items-center">
        <img
          src="./src/assets/images/logo_s.png"
          alt="Logo"
          class="h-8 w-8 mr-2"
        />
        <span class="text-xl font-semibold text-orange-2 font-serif"
          >Espacio Amapola</span
        >
      </a>
    </div>

    <!-- Menú de Navegación -->
    <nav class="flex-1">
      <ul class="flex justify-center space-x-8">
        {
          navItems.map((item) => (
            <li>
              <a
                href={item.href}
                class={`text-orange-2 hover:text-orange-1 ${
                  currentUrl === item.href ? "font-bold" : ""
                }`}
              >
                {item.title}
              </a>
            </li>
          ))
        }
      </ul>
    </nav>

    <!-- Botón de WhatsApp -->
    <div>
      <a
        href={`https://wa.me/${whatsappNumber}`}
        target="_blank"
        rel="noopener noreferrer"
        class="flex items-center bg-orange-2 text-white-1 px-4 py-2 rounded-full hover:bg-orange-1"
      >
        <!-- Icono de WhatsApp -->
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="h-5 w-5 mr-2"
          viewBox="0 0 24 24"
          fill="currentColor"
        >
          <!-- Contenido del SVG del icono de WhatsApp -->
          <path
            d="M20.52 3.48A11.92 11.92 0 0012 0C5.373 0 0 5.373 0 12a11.92 11.92 0 003.48 8.52l-1.116 4.464L6.828 22.92A11.92 11.92 0 0012 24c6.627 0 12-5.373 12-12 0-3.192-1.26-6.232-3.48-8.52zM12 22.08c-2.016 0-3.912-.516-5.568-1.44l-.396-.228-2.664.684.708-2.652-.264-.396A9.879 9.879 0 012.4 12c0-5.304 4.296-9.6 9.6-9.6 2.568 0 4.896.996 6.672 2.664A9.394 9.394 0 0121.6 12c0 5.304-4.296 9.6-9.6 9.6z"
          ></path>
          <path
            d="M17.64 14.004l-1.8-.792c-.24-.108-.504-.06-.684.12l-.96.96a8.372 8.372 0 01-3.876-3.876l.96-.96c.18-.18.228-.444.12-.684l-.792-1.8c-.096-.216-.324-.36-.576-.36h-1.8c-.336 0-.6.264-.6.6C8.4 11.34 10.2 15 13.2 17.004c.336 0 .6-.264.6-.6v-1.8c0-.252-.144-.48-.36-.576z"
          ></path>
        </svg>
        Reservar
      </a>
    </div>
  </div>
</header>
